{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    },
  },
  "plugins": [
    "babel",
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "camelcase": [2, {"properties": "never"}],
    "comma-spacing": 2,
    "curly": [2],
    "dot-notation": 2,
    "eqeqeq": [2],
    "indent": [2, 2, {"SwitchCase": 1}],
    "jsx-quotes": [2, "prefer-single"],
    "linebreak-style": [2, "unix"],
    "object-curly-spacing": [2, "never"],
    "no-cond-assign": 2,
    "no-console": 0,
    "no-var": 2,
    "no-empty": 2,
    "no-extra-semi": 2,
    "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1}],
    "no-multi-spaces": [2],
    "no-const-assign": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-throw-literal": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "strict": [2, "global"],
    "react/jsx-uses-react": [2],
    "react/jsx-uses-vars": [2]
  },
  "globals": {
    "ghost": true
  }
}
