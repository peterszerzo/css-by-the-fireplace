<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>CSS by the fireplace</title>
    <link rel='stylesheet' href='node_modules/reveal.js/css/reveal.css'/>
    <link rel='stylesheet' href='public/theme.css'/>
  </head>
  <body>
    <div class='reveal'>
      <div class='slides'>
        {{#each slides}}
          <section>
            {{{html}}}
          </section>
        {{/each}}
      </div>
    </div>
    <script src='node_modules/reveal.js/js/reveal.js'></script>
    <script>
      Reveal.initialize({
        center: true,
        controls: false,
        transition: 'slide',
        margin: 0.15
      });
    </script>
  </body>
</html>
